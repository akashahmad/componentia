{
    "name": "componentia",
    "version": "1.0.0",
    "homepage": "https://github.com/akashahmad/componentia#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/akashahmad/componentia"
    },
    "bugs": {
        "url": "https://github.com/akashahmad/componentia/issues"
    },
    "main": "./lib/cjs/index.js",
    "module": "./lib/esm/index.js",
    "types": "./lib/esm/index.d.ts",
    "files": [
        "/lib"
    ],
    "license": "MIT",
    "scripts": {
        "start": "yarn storybook",
        "compile": "rimraf \"./lib\" && npm-run-all --parallel compile:esm compile:cjs",
        "post:compile": "./scripts/post-build.sh",
        "compile:esm": "webpack --mode production",
        "compile:cjs": "webpack --mode production --env=cjs",
        "lint": "npm-run-all --parallel lint:prettier lint:stylelint lint:eslint lint:tsc",
        "lint:stylelint": "stylelint \"**/*.css\"",
        "lint:prettier": "prettier --check \"**/*.*\"",
        "lint:tsc": "tsc --project ./tsconfig.json",
        "lint:eslint": "eslint",
        "format": "prettier . --write",
        "test": "jest --watch-all",
        "test:ci": "jest --coverage --ci -u",
        "storybook": "storybook dev -p 4000",
        "build-storybook": "storybook build",
        "postinstall": "husky install",
        "prepack": "pinst --disable",
        "postpack": "pinst --enable"
    },
    "devDependencies": {
        "@babel/core": "^7.23.2",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/plugin-transform-class-properties": "^7.22.5",
        "@babel/plugin-transform-object-rest-spread": "^7.22.15",
        "@babel/preset-env": "^7.23.2",
        "@babel/preset-react": "^7.22.15",
        "@babel/preset-typescript": "^7.23.2",
        "@commitlint/cli": "^18.2.0",
        "@commitlint/config-conventional": "^18.1.0",
        "@semantic-release/commit-analyzer": "^11.1.0",
        "@semantic-release/git": "^10.0.1",
        "@semantic-release/npm": "^11.0.1",
        "@semantic-release/release-notes-generator": "^12.1.0",
        "@storybook/addon-essentials": "^7.5.3",
        "@storybook/addon-interactions": "^7.5.3",
        "@storybook/addon-links": "^7.5.3",
        "@storybook/addon-storysource": "^7.5.3",
        "@storybook/blocks": "^7.5.3",
        "@storybook/react": "^7.5.3",
        "@storybook/react-webpack5": "^7.5.3",
        "@storybook/testing-library": "^0.2.2",
        "@tailwindcss/typography": "^0.5.10",
        "@testing-library/jest-dom": "^6.1.4",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "^14.5.1",
        "@types/jest": "^29.5.7",
        "@types/node": "^20.8.10",
        "@types/react": "^18.2.36",
        "@typescript-eslint/eslint-plugin": "^6.10.0",
        "@typescript-eslint/parser": "^6.10.0",
        "autoprefixer": "^10.4.16",
        "babel-loader": "^9.1.3",
        "conventional-changelog-conventionalcommits": "^7.0.2",
        "css-loader": "^6.8.1",
        "eslint": "^8.53.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-jest": "^27.6.0",
        "eslint-plugin-react": "^7.33.2",
        "husky": "^8.0.0",
        "identity-obj-proxy": "^3.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jest-watch-typeahead": "^2.2.2",
        "lint-staged": "^15.0.2",
        "mini-css-extract-plugin": "^2.7.6",
        "npm-run-all": "^4.1.5",
        "path": "^0.12.7",
        "pinst": "^3.0.0",
        "postcss": "^8.4.31",
        "postcss-loader": "^7.3.3",
        "postcss-preset-env": "^9.3.0",
        "prettier": "3.0.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "rimraf": "^5.0.5",
        "storybook": "^7.5.3",
        "style-loader": "^3.3.3",
        "stylelint": "^15.11.0",
        "stylelint-config-standard": "^34.0.0",
        "tailwindcss": "^3.3.5",
        "ts-loader": "^9.5.0",
        "typescript": "^5.2.2",
        "webpack": "^5.89.0",
        "webpack-cli": "^5.1.4"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "tailwindcss": "^3.3.3"
    },
    "packageManager": "yarn@3.6.4",
    "dependencies": {
        "classnames": "^2.3.2",
        "react-calendar": "^4.6.1"
    }
}
